  <body>
    <!--------- header with logo and user login status-------->
    <div class = "head-line">
      <a class="link-home" href="https://final-pro-yay76-feq.glitch.me/">
        <img class="logo" src="https://cdn.glitch.com/54ccc57e-2201-4986-a083-7d154d5c4e6a%2Fdining_icon-01.png?v=1575671513396"/>
      </a> 
      <a class="link-login" href="https://final-pro-yay76-feq.glitch.me/login">
        <img class="userLogo" src = "https://cdn.glitch.com/54ccc57e-2201-4986-a083-7d154d5c4e6a%2Fperson-male.png?v=1575684362494"/>
      </a >
    </div> 
    
    <!-----------Banner image +  Searching feature -------------->
    
    <div class="banner">
      <div class = "banner-img">
        <div class = "banner-text">
          <h1>Make a Table Reservation</h1>
        </div>
      </div>
      <div class = "banner-form">
        <form id="search" action = "/search" method="post">
          <div class="form-row">
            <div class="col">
              <div class="input-group-col">
                  <label class = "input-group-text">Date</label>
                  <span><input type="date" class="form-control" name="date" id="date" value=<%= date %> /></span>
              </div>
            </div>
            <div class="col">
              <div class="input-group-col">
                <label class = "input-group-text">Time</label>
                <span><select class="form-control" name="time">
                    <option>9AM</option>
                    <option>10AM</option>
                    <option>11AM</option>
                    <option>12PM</option>
                    <option>1PM</option>
                    <option>2PM</option>
                    <option>3PM</option>
                    <option>4PM</option>
                    <option>5PM</option>
                    <option>6PM</option>
                    <option>7PM</option>
                    <option selected>8PM</option>
                    <option>9PM</option>
                    <option>10PM</option>
                    <option>11PM</option>
                    <option>12AM</option>
                  </select></span>
              </div>
            </div>
            <div class="col">
              <div class="input-group-col">
                <label class="input-group-text">Guests</label>
                <span><input type="number" class="form-control" name="guest" value="2" /></span>
              </div>
            </div>
            <div class="col">
              <div class="input-group-col">
                <label class="input-group-text">City</label>
                <span><input
                  type="text"
                  class="form-control"
                  name="city"
                  value="Pittsburgh"/></span>
                <span class="input-group-append">
                  <button
                    class="btn border-left-0 "
                    type="submit"
                    id="search"
                  >Search</button>
                </span>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
    
    <div class = "promo">
      <div class = "location">
        <img src = "https://cdn.glitch.com/54ccc57e-2201-4986-a083-7d154d5c4e6a%2FlocIcon.png?v=1575674673089"/>
        <span>Pittsburgh </span>
      </div>
      <div class = "promo-section">
        <h3 class = "section-title">Popular Restaurants At Your Area</h3>
        <div class="section-items">
        </div>
      </div>
    </div>
    
